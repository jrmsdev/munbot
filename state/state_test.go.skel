package state_test

import (
	"testing"

	"github.com/munbot/master/state"

	"github.com/munbot/master/testing/mock/state/machine"
	"github.com/munbot/master/testing/suite"
)

type XXXSuite struct {
	*suite.Suite
	mocksm *machine.MockSM
	sm     state.Machine
}

func TestSuite(t *testing.T) {
	suite.Run(t, &XXXSuite{Suite: suite.New()})
}

func (s *XXXSuite) SetupTest() {
	s.mocksm = machine.NewMockSM()
	s.sm = s.mocksm
}

func (s *XXXSuite) TestNew() {
	st := state.NewXXXState(s.sm)
	s.Equal(state.XXX.String(), st.String())
	s.Nil(st.Error())
}
